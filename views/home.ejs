<%- include("partials/header") -%>

<style media="screen">
  #heading-section {
    border-radius: 0;
    background-image: url(image/bg-pattern-circles.svg), linear-gradient(to right, hsl(237, 17%, 21%), hsl(237, 23%, 32%));
    height: 100%;
  }

  .row{
    margin: 0 auto;
  }
  .card{
    margin: 40px 40px;
    background: #CBC3E3;
  backdrop-filter: saturate(180%) blur(10px);
  box-shadow: 5px 5px 15px -5px rgba(0, 0, 0, 1);
  }
  .post-title{
    color:#181D31;
    font-size:28px;
  }
  .post-content{
    color:#525E75;
    font-size:20px;
  }
  .cursor-arrow{
    width:110px;
    height:110px;
    position:absolute;
    rotate:220deg;
    right:140px;
    top: 170px;
  }
  .read-more{
    margin: 0;
    color:#282A3A;
    border: 1px solid #282A3A;
  }
  .read-more:hover{
    border: 1px solid #282A3A;
  }
.features{
  display:none;
}
.compose{
  position:absolute;
  top:55px;
  right:100px;
}
.btn{
  margin:0;
}
.read{
  border-radius: 1px 0 0 1px !important;
}
.delete{
  border-left:1px;
  border-radius:0 1px 1px 0;
}
.edit{
  border-radius:0;
  border-left:1px;
}
.logout{
  right:240px;
}
.goback{
  right: 390px;
}
</style>
<a href="/create"><button type="button" class="btn btn-lg btn-outline-light compose goback" name="button">Other</button></a>
<a href="/compose"><button type="button" class="btn btn-lg btn-outline-light compose logout" name="button">Compose</button></a>
<a href="/"><button type="button" class="btn btn-lg btn-outline-light compose" name="button">Log Out</button></a>
<div class="row container">
  <h1>Welcome to the Home Page.</h1>
  <h3 style="color:#CCD6A6;">View all recent activities below.</h3>
  <img src="images/cursor-arrow.png" class="cursor-arrow">

<div class="card col-lg-4" style="width:18rem;">
    <div class="card-body">
      <h5 class="card-title post-title">Blogr</h5>
      <p class="card-text post-content"><%= startingContent %></p>
    </div>
</div>
<%  posts.forEach(function(post){ %>
  <div class="card col-lg-4" style="width: 18rem;">
    <div class="card-body">
          <h5 class="card-title post-title"><%= post.title %></h5>
          <p class="card-text post-content"><%= post.content.substring(0, 100) + " ..." %></p>
          <div class="btn-group">
            <a style="text-decoration: none" href="/posts/<%= post._id %>"><button type="button" class="btn btn-sm btn-outline-light read-more read">View</button></a>
            <a style="text-decoration: none" href="/update/<%= post._id %>"><button type="button" class="btn btn-sm btn-outline-light read-more edit">Edit</button></a>
            <a style="text-decoration: none" href="/delete/<%= post._id %>"><button type="button" class="btn btn-sm btn-outline-light read-more delete">Delete</button></a>
          </div>
    </div>
  </div>
  <% }); %>
</div>

<script type="text/javascript">
  document.getElementsByClassName("main-link")[0].setAttribute("href", "#");
</script>
